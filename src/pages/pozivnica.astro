---
import Layout from "../layouts/Layout.astro"
---

<Layout>
  <!-- start of invitation -->
  <section class="wpo-invitation-area section-padding">
    <div class="container-fluid">
      <div class="wpo-invitation-wrap">
        <div class="wpo-invitation-inner-item">
          <div class="wpo-invitation-inner">
            <div class="hero-text">
              <h2 class="wow fadeInUp" data-wow-duration="1200ms">
                Matea & Stipe
              </h2>
              <div class="wow fadeInUp" data-wow-duration="1400ms">
                <span>Svečano Vjenčanje</span>
              </div>
              <p class="wow fadeInUp" data-wow-duration="1600ms">
                15 . 06 . 2019
              </p>
            </div>
            <div
              class="middle-couple-pic wow zoomIn"
              data-wow-duration="1000ms"
            >
              <div class="middle-couple-pic-inner">
                <img src="assets/images/invite.jpeg" alt="wedding couple" />
              </div>
              <div class="shape">
                <img src="assets/images/slider/left-shape-3.png" alt="" />
              </div>
              <div class="shape2">
                <img src="assets/images/slider/left-shape-4.png" alt="" />
              </div>
            </div>
            <div class="wpo-wedding-date">
              <div class="wedding-date-wrap">
                <div class="row wow fadeInUp" data-wow-duration="1600ms">
                  <div class="col col-xs-12">
                    <div class="clock-grids">
                      <div id="clock"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="wpo-event-text">
              <ul>
                <li class="wow fadeInUp" data-wow-duration="1000ms">
                  Subota, 16 Lip. 2019, 12:00 – 04:00
                </li>
                <li class="wow fadeInUp" data-wow-duration="1200ms">
                  Hotel Park, trg Ante Starčevića, Široki Brijeg
                </li>
                <li class="wow fadeInUp" data-wow-duration="1600ms">
                  <a
                    href="https://maps.app.goo.gl/he4GuSL3Hvxn5gPk8"
                    target="_blank"
                    rel="noopener noreferrer">Lokacija na karti</a
                  >
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="left-shape">
      <div class="shape s1">
        <img src="assets/images/slider/ishape-1.svg" alt="" />
      </div>
      <div class="shape s2">
        <img src="assets/images/slider/ishape-2.svg" alt="" />
      </div>
      <div class="shape s3">
        <img src="assets/images/slider/ishape-3.svg" alt="" />
      </div>
      <div class="shape s4">
        <img src="assets/images/slider/ishape-4.svg" alt="" />
      </div>
      <div class="shape s5">
        <img src="assets/images/slider/ishape-5.svg" alt="" />
      </div>
    </div>
    <div class="right-shape">
      <div class="shape s1">
        <img src="assets/images/slider/ishape-5.svg" alt="" />
      </div>
      <div class="shape s2">
        <img src="assets/images/slider/ishape-4.svg" alt="" />
      </div>
      <div class="shape s3">
        <img src="assets/images/slider/ishape-3.svg" alt="" />
      </div>
      <div class="shape s4">
        <img src="assets/images/slider/ishape-2.svg" alt="" />
      </div>
      <div class="shape s5">
        <img src="assets/images/slider/ishape-1.svg" alt="" />
      </div>
    </div>
  </section>
</Layout>
